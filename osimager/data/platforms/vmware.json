{
  "include": "all",
  "arches": [
    "i386",
    "x86_64"
  ],
  "defs": {
    "local": true
  },
  "config": {
    "type": "vmware-iso",
    "vm_name": ">>name<<",
    "output_directory": ">>vms_path<</vmware/>>name<<",
    "insecure_connection": true,
    "headless": false,
    "skip_export": true,
    "skip_compaction": true,
    "keep_registered": true,
    "cpus": "#>cpu_sockets*cpu_cores<#",
    "cores": "#>cpu_cores<#",
    "memory": "#>memory<#",
    "firmware": ">>firmware<<",
    "usb": true,
    "iso_url": "E>'>>iso_path<</>>iso_name<<' if >>local_only<< else '>>iso_url<<'<E",
    "iso_checksum": "E>'>>iso_checksum<<' if len('>>iso_checksum<<') else 'none'<E",
    "iso_target_path": "E>'' if >>local_only<< else '>>iso_path<</>>iso_name<<'<E",
    "cd_files": "%>cd_files<%",
    "cd_label": ">>cd_label<<",
    "cdrom_adapter_type": "ide",
    "disk_adapter_type": "scsi",
    "disk_type_id": 0,
    "disk_size": "#>boot_disk_size<#",
    "network_adapter_type": "vmxnet3",
    "vnc_disable_password": true
  }
}
