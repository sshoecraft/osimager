{
  "platforms": [
    "virtualbox",
    "vmware",
    "vsphere"
  ],
  "defs": {
    "domain": "vm.localdomain",
    "cidr": "192.168.5.0/24",
    "vlan": 5,
    "dns": {
      "search": [
        "vm.localdomain",
        "localdomain"
      ],
      "servers": [
        "192.168.5.1"
      ]
    },
    "gateway": "192.168.5.1",
    "ntp": {
      "servers": [
        "192.168.1.5"
      ]
    },
    "vms_path": "/vms",
    "iso_path": "/iso/"
  },
  "platform_specific": [
    {
      "platform": "vmware",
      "config": {
        "vmx_data": {
          "ethernet0.present": "TRUE",
          "ethernet0.startConnected": "TRUE",
          "ethernet0.connectiontype": "custom",
          "ethernet0.vnet": "/dev/vmnet0",
          "scsi0.virtualdev": "pvscsi"
        }
      }
    },
    {
      "platform": "vsphere",
      "defs": {
        "datacenter": "lab",
        "cluster": "lab",
        "datastore": "vms",
        "folder": "Templates",
        "library": "Templates",
        "vm_network": "192.168.5.0:24",
        "thin_disk": "true"
      },
      "config": {
        "remote_cache_datastore": "iso"
      }
    }
  ]
}
